{
  "info": {
    "name": "Kiosk Availability API Tests",
    "description": "Testing the new Kiosk availability endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost/api/kiosk",
      "type": "string"
    },
    {
      "key": "token",
      "value": "your_kiosk_token_here",
      "type": "string"
    },
    {
      "key": "restaurant_slug",
      "value": "georgian-house",
      "type": "string"
    },
    {
      "key": "place_slug",
      "value": "summer-terrace",
      "type": "string"
    },
    {
      "key": "date",
      "value": "2025-07-20",
      "type": "string"
    },
    {
      "key": "time",
      "value": "18:30",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Kiosk Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"identifier\": \"kiosk_001\",\n  \"secret\": \"your_secret_key\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/login",
          "host": ["{{base_url}}"],
          "path": ["login"]
        }
      }
    },
    {
      "name": "2. Tables Overview",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/availability/restaurant/{{restaurant_slug}}/tables-overview?date={{date}}",
          "host": ["{{base_url}}"],
          "path": ["availability", "restaurant", "{{restaurant_slug}}", "tables-overview"],
          "query": [
            {
              "key": "date",
              "value": "{{date}}"
            }
          ]
        }
      }
    },
    {
      "name": "3. Available Times",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/availability/restaurant/{{restaurant_slug}}/times?date={{date}}",
          "host": ["{{base_url}}"],
          "path": ["availability", "restaurant", "{{restaurant_slug}}", "times"],
          "query": [
            {
              "key": "date",
              "value": "{{date}}"
            }
          ]
        }
      }
    },
    {
      "name": "4. Tables by Time (All Places)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/availability/restaurant/{{restaurant_slug}}/tables-by-time?date={{date}}&time={{time}}",
          "host": ["{{base_url}}"],
          "path": ["availability", "restaurant", "{{restaurant_slug}}", "tables-by-time"],
          "query": [
            {
              "key": "date",
              "value": "{{date}}"
            },
            {
              "key": "time",
              "value": "{{time}}"
            }
          ]
        }
      }
    },
    {
      "name": "5. Tables by Time (Place Specific) - NEW",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/availability/restaurant/{{restaurant_slug}}/{{place_slug}}/tables-by-time?date={{date}}&time={{time}}",
          "host": ["{{base_url}}"],
          "path": ["availability", "restaurant", "{{restaurant_slug}}", "{{place_slug}}", "tables-by-time"],
          "query": [
            {
              "key": "date",
              "value": "{{date}}"
            },
            {
              "key": "time",
              "value": "{{time}}"
            }
          ]
        }
      }
    }
  ]
}
